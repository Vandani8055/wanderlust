<% layout('/layouts/boilerplate') %>

<style>
  .font-manrope { font-family: 'Manrope', sans-serif; }
  
  .material-symbols-outlined { 
    font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24; 
  }

  /* Synchronized Brand Gradient */
  .brand-gradient { 
    background: linear-gradient(135deg, #00B0FF 0%, #673ab6 100%) !important; 
  }

  /* Consistent Font Sizing from Create Page */
  h1 { font-size: 1.25rem !important; }
  h2 { font-size: 0.9rem !important; }
  .text-label { font-size: 0.7rem; font-weight: 700; color: #1e293b; text-transform: uppercase; letter-spacing: 0.025em; }
</style>

<div class="bg-white font-manrope text-slate-900 antialiased min-h-screen pb-24">
  <main class="max-w-4xl mx-auto px-4 md:px-12 py-6">
    
    <nav class="flex items-center gap-1 mb-6 text-[9px] font-bold uppercase tracking-widest text-gray-400">
      <a class="hover:text-indigo-600" href="/listings">Listings</a>
      <span class="material-symbols-outlined text-[10px]">chevron_right</span>
      <span class="text-slate-900">Edit Listing</span>
    </nav>

    <div class="mb-8">
      <h1 class="font-black tracking-tight text-slate-900 mb-1">Edit Listing</h1>
      <p class="text-slate-400 text-[10px] font-bold uppercase tracking-tighter">Updating: <%= listing.title %></p>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-5 md:p-8">
      <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate class="needs-validation space-y-8">
        
        <div class="space-y-4">
          <div class="flex items-center gap-2 border-b border-slate-50 pb-2">
            <span class="material-symbols-outlined text-indigo-600 text-sm">image</span>
            <h2 class="font-bold text-slate-800">Property Media</h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative group h-40 overflow-hidden rounded-xl border border-slate-100 shadow-sm">
              <img src="<%= originalImageUrl %>" alt="Current image" class="w-full h-full object-cover" />
              <div class="absolute top-2 left-2 bg-white/90 backdrop-blur px-2 py-1 rounded-md text-[8px] font-bold uppercase tracking-widest text-indigo-600">Current Image</div>
            </div>
            
            <div class="p-4 border-2 border-dashed border-slate-100 rounded-2xl bg-slate-50 flex flex-col items-center justify-center text-center group hover:border-indigo-200 transition-colors">
               <span class="material-symbols-outlined text-xl text-slate-300 mb-1">cloud_upload</span>
               <p class="text-[9px] font-bold text-slate-500 uppercase mb-3">Upload replacement</p>
               <input name="listing[image]" type="file" class="text-[9px] text-slate-400 file:mr-3 file:py-1.5 file:px-4 file:rounded-full file:border-0 file:text-[9px] file:font-bold file:bg-gradient-to-r file:from-[#00B0FF] file:to-[#673ab6] file:text-white file:cursor-pointer hover:file:opacity-90 transition-all" />
            </div>
          </div>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-2 border-b border-slate-50 pb-2">
            <span class="material-symbols-outlined text-indigo-600 text-sm">edit_note</span>
            <h2 class="font-bold text-slate-800">General Details</h2>
          </div>
          <div class="grid grid-cols-1 gap-4">
            <label class="block">
              <span class="text-label mb-1.5 block">Listing Title</span>
              <input name="listing[title]" value="<%= listing.title %>" type="text" class="w-full rounded-xl border-slate-200 bg-slate-50 text-xs py-3 px-4 focus:ring-1 focus:ring-indigo-500 outline-none transition-all" required />
            </label>
            <label class="block">
              <span class="text-label mb-1.5 block">Description</span>
              <textarea name="listing[description]" rows="4" class="w-full rounded-xl border-slate-200 bg-slate-50 text-xs py-3 px-4 resize-none focus:ring-1 focus:ring-indigo-500 outline-none transition-all" required><%= listing.description %></textarea>
            </label>
          </div>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-2 border-b border-slate-50 pb-2">
            <span class="material-symbols-outlined text-indigo-600 text-sm">payments</span>
            <h2 class="font-bold text-slate-800">Pricing & Location</h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <label class="block">
              <span class="text-label mb-1.5 block">Price / Night</span>
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 font-bold text-xs">â‚¹</span>
                <input name="listing[price]" value="<%= listing.price %>" type="number" class="w-full rounded-xl border-slate-200 bg-slate-50 py-3 pl-7 pr-4 text-xs focus:ring-1 focus:ring-indigo-500 outline-none" required />
              </div>
            </label>
            <label class="block">
              <span class="text-label mb-1.5 block">Country</span>
              <input name="listing[country]" value="<%= listing.country %>" type="text" class="w-full rounded-xl border-slate-200 bg-slate-50 py-3 px-4 text-xs focus:ring-1 focus:ring-indigo-500 outline-none" required />
            </label>
            <label class="block">
              <span class="text-label mb-1.5 block">Location</span>
              <input name="listing[location]" value="<%= listing.location %>" type="text" class="w-full rounded-xl border-slate-200 bg-slate-50 py-3 px-4 text-xs focus:ring-1 focus:ring-indigo-500 outline-none" required />
            </label>
          </div>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-2 border-b border-slate-50 pb-2">
            <span class="material-symbols-outlined text-indigo-600 text-sm">sell</span>
            <h2 class="font-bold text-slate-800">Categories</h2>
          </div>
          <div class="flex flex-wrap gap-2">
            <% 
              const tags = [
                { id: 'Beach', label: 'Beach', icon: 'beach_access' },
                { id: 'Mountain', label: 'Mountains', icon: 'terrain' },
                { id: 'City', label: 'City', icon: 'location_city' },
                { id: 'Luxury', label: 'Luxury', icon: 'diamond' },
                { id: 'Trending', label: 'Trending', icon: 'trending_up' }
              ];
            %>
            <% for(let tag of tags) { %>
              <label class="cursor-pointer group">
                <input class="hidden peer" type="checkbox" name="listing[tags][]" value="<%= tag.id %>" <%= listing.tags && listing.tags.includes(tag.id) ? 'checked' : '' %>>
                <div class="px-4 py-2 rounded-xl border border-slate-100 bg-white text-[10px] font-bold text-slate-600 peer-checked:brand-gradient peer-checked:text-white peer-checked:border-transparent transition-all flex items-center gap-1.5 shadow-sm">
                  <span class="material-symbols-outlined text-sm"><%= tag.icon %></span> <%= tag.label %>
                </div>
              </label>
            <% } %>
          </div>
        </div>

        <div class="pt-6 border-t border-slate-50 flex items-center justify-between gap-4">
          <a href="/listings/<%= listing._id %>" class="text-slate-400 font-bold text-[10px] uppercase tracking-widest hover:text-red-500 flex items-center gap-1 transition-colors">
            <span class="material-symbols-outlined text-xs">close</span> Cancel
          </a>
          <button type="submit" class="brand-gradient text-white px-4 py-1 sm:px-10 sm:py-3.5 rounded-xl text-[11px] sm:text-sm font-bold shadow-md hover:opacity-90 active:scale-95 transition-all flex items-center gap-2">
            Save  <span class="material-symbols-outlined text-xs sm:text-base">check_circle</span>
          </button>
        </div>
      </form>
    </div>

    <div class="mt-8 flex justify-center gap-8">
      <div class="flex items-center gap-1.5 text-slate-300">
        <span class="material-symbols-outlined text-xs">verified_user</span>
        <span class="text-[8px] font-black uppercase tracking-widest">Secure Update</span>
      </div>
      <div class="flex items-center gap-1.5 text-slate-300 text-xs font-bold uppercase tracking-widest">
        <span class="text-[8px]">Last edited: <%= listing.updatedAt ? listing.updatedAt.toDateString() : 'Today' %></span>
      </div>
    </div>
  </main>
</div>