<% layout('/layouts/boilerplate') %>

<div class="container-fluid mt-4">
  <div id="filters">

    <!-- <div class="filter" data-tag="all">
      <div><i class="fa-solid fa-globe"></i></div>
      <p>All</p>
    </div> -->

    <div class="filter" data-tag="brand-new">
      <div><i class="fa-solid fa-face-grin-hearts"></i></div>
      <p>Brand new</p>
    </div>

    <div class="filter" data-tag="trending">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>

    <div class="filter" data-tag="beach">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>

    <div class="filter" data-tag="arctic">
      <div><i class="fa-solid fa-snowman"></i></div>
      <p>Arctic</p>
    </div>

    <div class="filter" data-tag="mountain">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>

    <div class="filter" data-tag="pools">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>

    <div class="filter" data-tag="camping">
      <div><i class="fa-solid fa-tents"></i></div>
      <p>Camping</p>
    </div>

    <div class="filter" data-tag="tiny-houses">
      <div><i class="fa-solid fa-house"></i></div>
      <p>Tiny houses</p>
    </div>

    <div class="filter" data-tag="luxury-hotels">
      <div><i class="fa-solid fa-gopuram"></i></div>
      <p>Luxury hotels</p>
    </div>

    <div class="text-toggle mb-4">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="toggle-switch" />
        <label class="form-check-label" for="toggle-switch">
          Display total after taxes
        </label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
    <% for (let listing of allListings) { %>
    <div class="col mb-4 listing-card" data-tags='<%= JSON.stringify(listing.tags) %>'>
     <a href="/listings/<%= listing._id %>" class="listing-link">

        <div
          class="card attractive-card hover-lift shadow-lg rounded-4 overflow-hidden"
        >
          <div class="position-relative">
            <img
              src="<%= listing.image.url %>"
              alt="<%= listing.title %>"
              class="card-img-top listing-img"
            />

            <!-- wishlist btn  -->
            <button class="wishlist-btn border-0" data-id="<%= listing._id %>">
              <i
                class="<%= currUser && currUser.wishlist.includes(listing._id) ? 'fa-solid' : 'fa-regular' %> fa-heart heart-icon"
              ></i>
            </button>

            <span
              class="position-absolute px-3 py-2 badge text-white fw-bold shadow-sm price-tag"
            >
              &#x20B9;<%= listing.price.toLocaleString("en-IN") %> / night
            </span>
          </div>

          <!-- gor gst : -->
          <div class="card-body card-body-main">
            <h5 class="card-title-main"><%= listing.title %></h5>

            <p class="card-text text-muted"><%= listing.location %></p>

         
            <p
              class="card-text price-text"
              data-base-price="<%= listing.price %>"
              data-gst-price="<%= (listing.price * 1.18).toFixed(0) %>"
            >
              <span class="final-price fw-bold text-dark price-amount">
                ₹<%= listing.price.toLocaleString("en-IN") %>
              </span>

              <span class="old-price text-muted ms-2" style="display: none">
                ₹<%= listing.price.toLocaleString("en-IN") %>
              </span>

              <span
                class="gst-badge badge bg-success ms-2"
                style="display: none"
              >
                +18% GST
              </span>
            </p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>







<script>
  const n = t => (t||"").toLowerCase().replace(/[^a-z]/g,"").replace(/(es|s)$/,"");

  document.querySelectorAll(".filter").forEach(f =>
    f.onclick = () => {
      const sel = n(f.dataset.tag);
      document.querySelectorAll(".listing-card").forEach(card => {
        let tags = [];
        try { tags = JSON.parse(card.dataset.tags||"[]").map(n); } catch(e){}
        card.style.display = sel==="all" || tags.includes(sel) ? "" : "none";
      });
    }
  );
</script>



