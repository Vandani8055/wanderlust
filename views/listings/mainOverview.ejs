<script>
  /* All logic from your original script preserved exactly as is */
  document.querySelectorAll('.feature-accordion-item').forEach(item => {
    item.addEventListener('click', () => {
      const isActive = item.classList.contains('active');
      document.querySelectorAll('.feature-accordion-item').forEach(el => {
        el.classList.remove('active');
        el.querySelector('.accordion-content').style.maxHeight = '0px';
        el.querySelector('i').style.transform = 'rotate(0deg)';
      });
      if (!isActive) {
        item.classList.add('active');
        item.querySelector('.accordion-content').style.maxHeight = '150px';
        item.querySelector('i').style.transform = 'rotate(90deg)';
      }
    });
  });

  const animateStats = () => {
    const counters = document.querySelectorAll('.stat-item h3');
    counters.forEach(counter => {
      const target = +counter.getAttribute('data-target');
      let count = 0;
      const speed = 2000;
      const increment = target / (speed / 16);
      const updateCount = () => {
        if (count < target) {
          count += increment;
          if(target >= 1000000) counter.innerText = (count/1000000).toFixed(1) + "M+";
          else if(target >= 1000) counter.innerText = Math.ceil(count/1000) + "K+";
          else counter.innerText = Math.ceil(count) + (target === 98 ? "%" : "+");
          requestAnimationFrame(updateCount);
        } else {
          counter.innerText = (target >= 1000000 ? "1M+" : target + (target === 98 ? "%" : "+"));
        }
      };
      updateCount();
    });
  };

  const observer = new IntersectionObserver((entries) => {
    if(entries[0].isIntersecting) { animateStats(); observer.disconnect(); }
  }, { threshold: 0.5 });
  observer.observe(document.getElementById('stats-section'));

  const taxSwitch = document.getElementById("toggle-switch");
  taxSwitch.addEventListener("change", () => {
    document.querySelectorAll(".price-text").forEach(el => {
      const amountSpan = el.querySelector(".price-amount");
      if (taxSwitch.checked) {
        amountSpan.innerText = parseInt(el.dataset.gstPrice).toLocaleString("en-IN");
      } else {
        amountSpan.innerText = parseInt(el.dataset.basePrice).toLocaleString("en-IN");
      }
    });
  });

  const normalize = t => (t || "").toLowerCase().replace(/[^a-z]/g, "").replace(/(es|s)$/, "");
  document.querySelectorAll(".filter").forEach(f => {
    f.onclick = () => {
      document.querySelectorAll(".filter").forEach(btn => btn.classList.remove("active"));
      f.classList.add("active");
      const sel = normalize(f.dataset.tag);
      document.querySelectorAll(".popular-card").forEach(card => {
        let tags = [];
        try { tags = JSON.parse(card.dataset.tags || "[]").map(normalize); } catch (e) {}
        card.style.display = sel === "all" || tags.includes(sel) ? "" : "none";
      });
    };
  });

  function toggleFAQ(button) {
    const item = button.parentElement;
    const content = item.querySelector('.faq-content');
    const icon = button.querySelector('i');
    const isOpen = content.style.maxHeight !== '0px' && content.style.maxHeight !== '';

    document.querySelectorAll('.faq-content').forEach(c => {
      c.style.maxHeight = '0px';
      const icon = c.previousElementSibling.querySelector('i');
      icon.classList.remove('fa-minus');
      icon.classList.add('fa-plus');
    });

    if (!isOpen) {
      content.style.maxHeight = '160px';
      icon.classList.remove('fa-plus');
      icon.classList.add('fa-minus');
    } else {
      content.style.maxHeight = '0px';
      icon.classList.replace('fa-minus', 'fa-plus');
    }
  }

  // Wishlist functionality
  document.querySelectorAll('.popular-card button').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      e.stopPropagation();
      
      const listingId = btn.closest('.popular-card').dataset.tags ? 
        btn.closest('.popular-card').querySelector('a').href.split('/').pop() : 
        null;
      
      if (!listingId) return;
      
      const icon = btn.querySelector('i');
      const isWishlisted = icon.classList.contains('fa-solid');
      
      try {
        const response = await fetch(`/wishlist/${listingId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        if (response.ok) {
          if (isWishlisted) {
            icon.classList.remove('fa-solid', 'text-red-500');
            icon.classList.add('fa-regular');
          } else {
            icon.classList.remove('fa-regular');
            icon.classList.add('fa-solid', 'text-red-500');
          }
        }
      } catch (error) {
        console.error('Error updating wishlist:', error);
      }
    });
  });
</script>