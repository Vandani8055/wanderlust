

<% layout('/layouts/boilerplate') %>

<style>
  .font-manrope { font-family: 'Manrope', sans-serif; }
  
  .material-symbols-outlined { 
    font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24; 
  }

  /* Your Brand Gradient from Listing Page */
  .brand-gradient { 
    background: linear-gradient(135deg, #00B0FF 0%, #673ab6 100%) !important; 
  }

  .btn-gradient {
    background: linear-gradient(135deg, #00B0FF 0%, #673ab6 100%);
    transition: all 0.3s ease;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* Consistent Font Sizing */
  h1 { font-size: 1.5rem !important; }
  h2 { font-size: 1rem !important; }
  .text-xs { font-size: 0.65rem; }
  .text-label { font-size: 0.75rem; font-weight: 700; color: #1e293b; }
</style>

<div class="bg-white font-manrope text-slate-900 antialiased min-h-screen pb-20">
  <main class="max-w-4xl mx-auto px-4 md:px-12 py-6">
    
    <nav class="flex items-center gap-1 mb-6 text-[10px] font-bold uppercase tracking-wider text-gray-400">
      <a class="hover:text-indigo-600" href="/listings">Listings</a>
      <span class="material-symbols-outlined text-[10px]">chevron_right</span>
      <span class="text-slate-900">Create New Listing</span>
    </nav>

    <div class="mb-8">
      <h1 class="font-black tracking-tight text-slate-900 mb-2">Create New Listing</h1>
      <p class="text-slate-500 text-xs">Set the stage for your next luxury guest experience.</p>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 md:p-8">
      <form action="/listings" method="POST" enctype="multipart/form-data" novalidate class="needs-validation space-y-8">
        
        <div class="space-y-4">
          <div class="flex items-center gap-2 border-b border-slate-50 pb-3">
            <span class="material-symbols-outlined text-indigo-600 text-base">edit_note</span>
            <h2 class="font-bold text-slate-900">General Details</h2>
          </div>
          <div class="grid grid-cols-1 gap-4">
            <label class="block">
              <span class="text-label mb-1.5 block">Listing Title</span>
              <input name="listing[title]" type="text" class="w-full rounded-lg border-slate-200 bg-slate-50 text-xs py-3 px-4 focus:ring-1 focus:ring-indigo-500 outline-none" placeholder="e.g. The Azure Horizon Infinity Villa" required />
            </label>
            <label class="block">
              <span class="text-label mb-1.5 block">Description</span>
              <textarea name="listing[description]" rows="4" class="w-full rounded-lg border-slate-200 bg-slate-50 text-xs py-3 px-4 resize-none focus:ring-1 focus:ring-indigo-500 outline-none" placeholder="Craft a compelling story about your property..." required></textarea>
            </label>
          </div>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-2 border-b border-slate-50 pb-3">
            <span class="material-symbols-outlined text-indigo-600 text-base">payments</span>
            <h2 class="font-bold text-slate-900">Pricing & Location</h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <label class="block">
              <span class="text-label mb-1.5 block">Price per Night</span>
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 font-bold text-xs">â‚¹</span>
                <input name="listing[price]" type="number" class="w-full rounded-lg border-slate-200 bg-slate-50 py-3 pl-7 pr-4 text-xs focus:ring-1 focus:ring-indigo-500 outline-none" placeholder="1200" required />
              </div>
            </label>
            <label class="block">
              <span class="text-label mb-1.5 block">Country</span>
              <input name="listing[country]" type="text" class="w-full rounded-lg border-slate-200 bg-slate-50 py-3 px-4 text-xs focus:ring-1 focus:ring-indigo-500 outline-none" placeholder="India" required />
            </label>
            <label class="block">
              <span class="text-label mb-1.5 block">City / Location</span>
              <input name="listing[location]" type="text" class="w-full rounded-lg border-slate-200 bg-slate-50 py-3 px-4 text-xs focus:ring-1 focus:ring-indigo-500 outline-none" placeholder="e.g. Goa, Vagator" required />
            </label>
          </div>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-2 border-b border-slate-50 pb-3">
            <span class="material-symbols-outlined text-indigo-600 text-base">sell</span>
            <h2 class="font-bold text-slate-900">Categories</h2>
          </div>
          <div class="flex flex-wrap gap-2">
            <% 
              const tags = [
                { id: 'brand-new', label: 'Brand New', icon: 'new_releases' },
                { id: 'trending', label: 'Trending', icon: 'trending_up' },
                { id: 'beach', label: 'Beach', icon: 'beach_access' },
                { id: 'mountain', label: 'Mountains', icon: 'terrain' },
                { id: 'pools', label: 'Amazing Pools', icon: 'pool' },
                { id: 'camping', label: 'Camping', icon: 'holiday_village' },
                { id: 'luxury-hotels', label: 'Luxury', icon: 'apartment' }
              ];
            %>
            <% for(let tag of tags) { %>
              <label class="cursor-pointer group">
                <input class="hidden peer" type="checkbox" name="listing[tags][]" value="<%= tag.id %>">
                <div class="px-4 py-2 rounded-lg border border-slate-100 bg-white text-[10px] font-bold text-slate-600 peer-checked:brand-gradient peer-checked:text-white peer-checked:border-transparent transition-all flex items-center gap-1.5 shadow-sm">
                  <span class="material-symbols-outlined text-sm"><%= tag.icon %></span> <%= tag.label %>
                </div>
              </label>
            <% } %>
          </div>
        </div>

        <div class="space-y-4">
  <div class="flex items-center gap-2 border-b border-slate-50 pb-2">
    <span class="material-symbols-outlined text-indigo-600 text-sm">cloud_upload</span>
    <h2 class="font-bold text-slate-800">Property Media</h2>
  </div>
  <div class="p-6 border-2 border-dashed border-slate-100 rounded-2xl bg-slate-50 flex flex-col items-center justify-center text-center group transition-colors hover:border-indigo-200">
     <span class="material-symbols-outlined text-2xl text-slate-300 mb-2 group-hover:scale-110 transition-transform">add_a_photo</span>
     <p class="text-[10px] font-bold text-slate-500 uppercase mb-4">Click to upload cover image</p>
     
     <input 
        name="listing[image]" 
        type="file" 
        class="text-[10px] text-slate-400 
               file:mr-4 file:py-1 file:px-4
               file:rounded-full file:border-0 
               file:text-[10px] file:font-bold 
               file:bg-gradient-to-r file:from-[#00B0FF] file:to-[#673ab6] 
               file:text-white file:cursor-pointer
               hover:file:opacity-90 transition-all" 
        required 
     />
  </div>
</div>
        <div class="pt-6 border-t border-slate-100 flex items-center justify-between">
          <a href="/dashboard" class="text-slate-400 font-bold text-[10px] uppercase tracking-widest hover:text-red-500 flex items-center gap-1">
            <span class="material-symbols-outlined text-sm">west</span> Cancel
          </a>
          <button type="submit" class="brand-gradient text-white px-6 py-2.5 rounded-lg text-[10px] font-bold shadow-sm hover:scale-[1.02] active:scale-[0.98] transition-all flex items-center gap-1">
            Create Listing <span class="material-symbols-outlined text-xs">rocket_launch</span>
          </button>
        </div>
      </form>
    </div>

    <div class="mt-8 flex justify-center gap-6">
      <div class="flex items-center gap-1.5 text-slate-400">
        <span class="material-symbols-outlined text-sm">verified_user</span>
        <span class="text-[9px] font-black uppercase tracking-tighter">Verified Submission</span>
      </div>
      <div class="flex items-center gap-1.5 text-slate-400">
        <span class="material-symbols-outlined text-sm">support_agent</span>
        <span class="text-[9px] font-black uppercase tracking-tighter">24/7 Host Support</span>
      </div>
    </div>
  </main>
</div>