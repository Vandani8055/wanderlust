<% layout('/layouts/boilerplate') %>



<style type="text/tailwindcss">
  @layer base {
    body { @apply font-sans bg-background-light text-[#2A2D35]; }
    input, textarea { @apply font-display; }
  }
  .gradient-border-box {
    position: relative;
    background: #fff;
    background-clip: padding-box;
    border: 2px dashed transparent;
  }
  .gradient-border-box::before {
    content: '';
    position: absolute;
    top: 0; right: 0; bottom: 0; left: 0;
    z-index: -1;
    margin: -2px;
    border-radius: inherit;
    background: linear-gradient(to right, #2b7cee, #9966CC);
  }
  input::-webkit-outer-spin-button, input::-webkit-inner-spin-button {
    -webkit-appearance: none; margin: 0;
  }
</style>

<div class="min-h-screen pb-20">
  <main class="max-w-4xl mx-auto px-6 py-12">
    <nav class="flex items-center gap-2 mb-6 text-sm font-medium">
      <a class="text-slate-400 hover:text-primary transition-colors" href="/listings">Listings</a>
      <span class="material-symbols-outlined text-xs text-slate-300">chevron_right</span>
      <span class="text-primary">Create New Listing</span>
    </nav>

    <div class="mb-10">
      <h1 class="text-4xl font-extrabold tracking-tight mb-2 bg-clip-text text-transparent bg-gradient-to-r from-slate-900 to-slate-600 font-display">
        Create New Listing
      </h1>
      <p class="text-slate-500 text-lg">Set the stage for your next luxury guest experience.</p>
    </div>

    <div class="bg-white rounded-xl shadow-[0_8px_30px_rgb(0,0,0,0.04)] border border-slate-100 p-8 md:p-10">
      <form action="/listings" method="POST" enctype="multipart/form-data" novalidate class="needs-validation space-y-10">
        
        <div class="space-y-6">
          <div class="flex items-center gap-2 border-b border-slate-100 pb-4">
            <span class="material-symbols-outlined text-primary">edit_note</span>
            <h2 class="text-lg font-bold">General Details</h2>
          </div>
          <div class="grid grid-cols-1 gap-6">
            <label class="block">
              <span class="text-sm font-bold text-slate-700 mb-2 block">Listing Title</span>
              <input name="listing[title]" type="text" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all py-3.5 px-4" placeholder="e.g. The Azure Horizon Infinity Villa" required />
              <div class="invalid-feedback text-red-500 text-xs mt-1">Please enter a catchy title.</div>
            </label>
            <label class="block">
              <span class="text-sm font-bold text-slate-700 mb-2 block">Description</span>
              <textarea name="listing[description]" rows="5" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all py-3.5 px-4 resize-none" placeholder="Craft a compelling story about your property..." required></textarea>
              <div class="invalid-feedback text-red-500 text-xs mt-1">Description is required for guests.</div>
            </label>
          </div>
        </div>

        <div class="space-y-6">
          <div class="flex items-center gap-2 border-b border-slate-100 pb-4">
            <span class="material-symbols-outlined text-primary">payments</span>
            <h2 class="text-lg font-bold">Pricing & Location</h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <label class="block">
              <span class="text-sm font-bold text-slate-700 mb-2 block">Price per Night</span>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 font-bold">â‚¹</span>
                <input name="listing[price]" type="number" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all py-3.5 pl-8 pr-4" placeholder="1200" required />
              </div>
            </label>
            <label class="block">
              <span class="text-sm font-bold text-slate-700 mb-2 block">Country</span>
              <input name="listing[country]" type="text" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all py-3.5 px-4" placeholder="India" required />
            </label>
            <label class="block">
              <span class="text-sm font-bold text-slate-700 mb-2 block">City / Location</span>
              <input name="listing[location]" type="text" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all py-3.5 px-4" placeholder="e.g. Goa, Vagator" required />
            </label>
          </div>
        </div>

        <div class="space-y-6">
          <div class="flex items-center gap-2 border-b border-slate-100 pb-4">
            <span class="material-symbols-outlined text-primary">label</span>
            <h2 class="text-lg font-bold">Amenities & Tags</h2>
          </div>
          <div class="flex flex-wrap gap-3">
            <% 
              const tags = [
                { id: 'brand-new', label: 'Brand New', icon: 'new_releases' },
                { id: 'trending', label: 'Trending', icon: 'trending_up' },
                { id: 'beach', label: 'Beach', icon: 'beach_access' },
                { id: 'arctic', label: 'Arctic', icon: 'ac_unit' },
                { id: 'mountain', label: 'Mountains', icon: 'terrain' },
                { id: 'pools', label: 'Amazing Pools', icon: 'pool' },
                { id: 'camping', label: 'Camping', icon: 'holiday_village' },
                { id: 'tiny-houses', label: 'Tiny Houses', icon: 'cabin' },
                { id: 'luxury-hotels', label: 'Luxury Hotels', icon: 'apartment' }
              ];
            %>
            <% for(let tag of tags) { %>
              <label class="cursor-pointer group">
                <input class="hidden peer" type="checkbox" name="listing[tags][]" value="<%= tag.id %>" id="tag-<%= tag.id %>">
                <div class="px-5 py-2.5 rounded-full border border-slate-200 bg-white text-sm font-semibold text-slate-600 peer-checked:bg-primary peer-checked:text-white peer-checked:border-primary transition-all flex items-center gap-2 group-hover:border-primary/50">
                  <span class="material-symbols-outlined text-lg"><%= tag.icon %></span> <%= tag.label %>
                </div>
              </label>
            <% } %>
          </div>
          <p class="text-xs text-slate-500">Select all categories that apply to your property</p>
        </div>

        <div class="space-y-6">
          <div class="flex items-center gap-2 border-b border-slate-100 pb-4">
            <span class="material-symbols-outlined text-primary">cloud_upload</span>
            <h2 class="text-lg font-bold">Media Upload</h2>
          </div>
          <div class="gradient-border-box rounded-xl p-1">
            <div class="bg-slate-50 rounded-lg p-10 flex flex-col items-center justify-center text-center group cursor-pointer border-2 border-transparent hover:bg-slate-100 transition-colors">
              <div class="size-14 rounded-2xl bg-gradient-to-br from-primary to-accent-purple flex items-center justify-center text-white mb-4 shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-2xl">add_photo_alternate</span>
              </div>
              <h3 class="text-base font-bold mb-1">Upload Property Image</h3>
              <p class="text-slate-500 max-w-xs text-xs mb-5">High-quality JPG or PNG recommended.</p>
              <input name="listing[image]" type="file" class="w-full max-w-xs text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-bold file:bg-primary file:text-white hover:file:bg-primary/90" required />
            </div>
          </div>
        </div>

        <div class="pt-8 flex flex-col sm:flex-row items-center justify-between gap-6 border-t border-slate-100">
          <a href="/listings" class="text-slate-500 font-bold hover:text-red-500 transition-colors flex items-center gap-2 group">
            <span class="material-symbols-outlined transition-transform group-hover:-translate-x-1">west</span>
            Cancel & Return
          </a>
          <div class="flex w-full sm:w-auto gap-4">
            <button type="submit" class="w-full sm:w-auto px-10 py-4 rounded-xl bg-gradient-to-r from-primary to-accent-purple text-white font-extrabold text-lg shadow-[0_10px_30px_rgba(43,124,238,0.3)] hover:shadow-[0_15px_35px_rgba(43,124,238,0.4)] active:scale-[0.98] transition-all flex items-center justify-center gap-3">
              Create Listing
              <span class="material-symbols-outlined">rocket_launch</span>
            </button>
          </div>
        </div>
      </form>
    </div>

    <div class="mt-12 flex items-center justify-center gap-8 text-slate-400">
      <div class="flex items-center gap-2 text-xs font-semibold uppercase tracking-widest">
        <span class="material-symbols-outlined text-sm">verified_user</span>
        Secure Submission
      </div>
      <div class="flex items-center gap-2 text-xs font-semibold uppercase tracking-widest">
        <span class="material-symbols-outlined text-sm">support_agent</span>
        24/7 Host Support
      </div>
    </div>
  </main>
</div>