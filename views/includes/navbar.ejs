<style>
    .font-manrope { font-family: 'Manrope', sans-serif; }
    
    .material-symbols-outlined { 
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24; 
    }

    /* Gradient matches the "Create Account" button in your UI */
    .brand-gradient { 
        background: linear-gradient(135deg, #00B0FF 0%, #673ab6 100%) !important; 
    }
    
    .brand-text {
        background: linear-gradient(135deg, #00B0FF 0%, #673ab6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    #searchInput:focus { outline: none; box-shadow: none; }
</style>

<nav class="sticky top-0 z-50 w-full bg-white/95 backdrop-blur-md border-b border-slate-200 shadow-sm font-manrope">
    <div class="max-w-[1440px] mx-auto px-3 sm:px-6 lg:px-10 h-16 flex items-center justify-between gap-2 sm:gap-4">
        
        <a href="/listings" class="flex items-center shrink-0 no-underline group">
            <img src="/images/logo.png" alt="Wanderlust Logo" class="size-11 sm:size-16 object-contain" />
        </a>

        <div class="flex-1 flex items-center bg-slate-100 rounded-2xl px-2 sm:px-3 py-1.5 max-w-[160px] sm:max-w-[450px] border border-transparent focus-within:border-indigo-400 focus-within:bg-white focus-within:shadow-md transition-all group">
            <span class="material-symbols-outlined text-slate-400 group-focus-within:text-indigo-500 text-[18px] sm:text-[20px] mr-1 sm:mr-2">search</span>
            <form action="/listings/search" method="GET" class="flex-grow flex items-center">
                <input 
                    name="q" 
                    id="searchInput" 
                    class="bg-transparent border-none p-0 text-[11px] sm:text-sm w-full placeholder:text-slate-500 text-slate-800" 
                    placeholder="Search..." 
                    type="text"
                    required
                    autocomplete="off"
                />
            </form>
        </div>

        <div class="flex items-center gap-2 sm:gap-3 shrink-0">
            
            <a href="/wishlist" class="hidden md:flex relative p-2 text-slate-600 hover:bg-slate-100 rounded-xl transition-colors">
                <span class="material-symbols-outlined text-[24px]">favorite</span>
                <% if (currUser?.wishlist?.length) { %>
                    <span class="absolute top-1 right-1 flex h-4 w-4 items-center justify-center rounded-full brand-gradient text-[9px] text-white font-bold border-2 border-white">
                        <%= currUser.wishlist.length %>
                    </span>
                <% } %>
            </a>

            <div class="flex items-center gap-2">
                <% if (!currUser) { %>
                    <a href="/login" class="text-xs sm:text-sm font-bold text-slate-700 px-2 py-2 hover:bg-slate-100 rounded-xl hidden sm:block">Login</a>
                    
                    <a href="/signup" class="brand-gradient text-white px-3 py-2 sm:px-5 sm:py-2.5 rounded-lg sm:rounded-xl text-[11px] sm:text-sm font-bold shadow-md hover:scale-105 active:scale-95 transition-all whitespace-nowrap">
                        Sign In
                    </a>
                <% } else { %>
                    <div class="flex items-center gap-2 sm:gap-3">
                        <a href="/logout" class="hidden sm:block text-[10px] font-bold text-slate-400 hover:text-red-500 uppercase tracking-wider">Logout</a>
                        <a href="<%= currUser.role === 'admin' ? '/admin/dashboard' : '/dashboard' %>" 
                           class="size-9 sm:size-10 rounded-full overflow-hidden border-2 border-indigo-100 hover:border-indigo-500 transition-all shadow-sm">
                            <img class="w-full h-full object-cover" 
                                 src="<%= currUser.profileImage ? currUser.profileImage : '/images/default.jpg' %>" 
                                 alt="Profile" />
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</nav>