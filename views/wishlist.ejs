<% layout('/layouts/boilerplate') %>

<div class="container mt-4">
  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
    <% if (wishlist.length === 0) { %>
    <div class="text-center mt-5">


      <h4>No Wishlist Yet üò¢</h4>
      <p>Add some properties by clicking the <span class="heart-icon">‚ù§Ô∏è</span> button</p>
    </div>
    <% } %>

    <% wishlist.forEach(listing => { %>
    <div class="col mb-4">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card attractive-card hover-lift shadow-lg rounded-4 overflow-hidden">
          <div class="position-relative">
            <!-- IMAGE -->
            <img src="<%= listing.image.url %>" class="card-img-top listing-img" />

            <!-- REMOVE FROM WISHLIST HEART -->
            <button class="wishlist-btn border-0" data-id="<%= listing._id %>">
              <i class="fa-solid fa-heart text-danger"></i>
            </button>

            <!-- PRICE BADGE -->
            <span class="position-absolute px-3 py-2 badge text-white fw-bold shadow-sm price-tag">
              ‚Çπ<%= listing.price.toLocaleString("en-IN") %> / night
            </span>

            <!-- NEW BADGE -->
            <% if (listing.isNew) { %>
            <span class="position-absolute new-badge badge bg-success text-white fw-bold shadow-sm">
              New
            </span>
            <% } %>
          </div>

          <!-- BODY -->
          <div class="card-body card-body-main">
            <h5 class="card-title-main"><%= listing.title %></h5>
            <p class="card-text text-muted"><%= listing.location %></p>
          </div>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
</div>




<style>
  .text-center.mt-5 {
    /* Large vertical padding for clean whitespace */
    padding: 100px 0;
    margin-top: 60px !important;
    margin-bottom: 60px;
    width: 100%;

    /* Ensure a pure white background and remove all decorative borders/shadows */
    background-color: transparent;
    border: none;
    box-shadow: none;
  }

  /* Optional: Add a subtle visual divider before the message content */
  .text-center.mt-5::before {
    content: '';
    display: block;
    width: 80px;
    height: 4px;
    background-color: #e0e0e0;
    /* Very subtle light gray line */
    margin: 0 auto 30px auto;
    border-radius: 2px;
  }

  .text-center.mt-5 h4 {
    /* Main Heading: Strong, serious, and highly readable */
    font-size: 36px;
    font-weight: 800;
    /* Extra bold */
    color: #1e293b;
    /* Deep, professional dark text */
    margin-bottom: 10px;
  }

  .text-center.mt-5 p {
    /* Secondary Text: Clear instruction, slightly lighter color */
    font-size: 18px;
    font-weight: 400;
    /* Regular weight */
    color: #475569;
    /* Muted slate gray */
    margin-top: 10px;
    line-height: 1.6;
    max-width: 60%;
    /* Ensure text doesn't stretch too wide */
    margin-left: auto;
    margin-right: auto;
  }

  /* Heart Icon Styling (uses your red accent for the call-to-action) */
  .heart-icon {
    color: #fe424d;
    font-size: 24px;
    vertical-align: middle;
    font-weight: 700;
  }
</style>