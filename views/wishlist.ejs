<% layout('/layouts/boilerplate') %>

<style>
  /* STRICT THEME SYNC */
  .font-manrope { font-family: 'Manrope', sans-serif; }
  
  .material-symbols-outlined { 
    font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24; 
  }

  .brand-gradient { 
    background: linear-gradient(135deg, #00B0FF 0%, #673ab6 100%) !important; 
  }

  /* Precise Font Sizing from Search System */
  h1 { font-size: 1.25rem !important; font-weight: 900; letter-spacing: -0.025em; }
  h3 { font-size: 0.9rem !important; font-weight: 800; color: #0f172a; }
  
  .text-label { font-size: 0.7rem; font-weight: 700; color: #1e293b; text-transform: uppercase; letter-spacing: 0.05em; }
  .text-sub { font-size: 0.65rem; font-weight: 600; color: #64748b; }
  .price-text { font-size: 1.15rem; font-weight: 900; color: #0f172a; }
  
  .glass-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }
</style>

<div class="bg-white font-manrope text-slate-900 antialiased min-h-screen pb-20">
  <main class="max-w-6xl mx-auto px-4 md:px-12 py-6">
    
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-4 mb-8">
      <div>
        <nav class="flex items-center gap-1 mb-4 text-[9px] font-bold uppercase tracking-widest text-gray-400">
          <a class="hover:text-indigo-600" href="/listings">Listings</a>
          <span class="material-symbols-outlined text-[10px]">chevron_right</span>
          <span class="text-slate-900">Your Wishlist</span>
        </nav>
        <h1 class="text-slate-900 mb-1">Saved Destinations</h1>
        <p class="text-[10px] text-emerald-600 font-black uppercase tracking-widest">
           <%= wishlist.length %> Properties Saved
        </p>
      </div>

      <div class="flex items-center gap-3 bg-slate-50 p-2.5 px-4 rounded-xl border border-slate-100">
        <span class="text-[9px] font-black text-slate-500 uppercase tracking-tighter">Display total with GST</span>
        <label class="relative inline-flex items-center cursor-pointer">
          <input type="checkbox" id="toggle-switch" class="sr-only peer">
          <div class="w-9 h-5 bg-slate-200 rounded-full peer peer-checked:after:translate-x-full peer-checked:bg-indigo-600 after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all"></div>
        </label>
      </div>
    </div>

    <% if (wishlist.length === 0) { %>
      <div class="text-center py-16 bg-slate-50 rounded-2xl border border-dashed border-slate-200">
        <span class="material-symbols-outlined text-4xl text-slate-300 mb-2">favorite_border</span>
        <p class="text-label">Your wishlist is currently empty</p>
        <a href="/listings" class="mt-4 inline-block brand-gradient text-white px-6 py-2 rounded-full text-[9px] font-black uppercase tracking-widest">Discover Stays</a>
      </div>
    <% } else { %>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% wishlist.forEach(listing => { %>
          <div class="group card-container bg-white rounded-2xl overflow-hidden border border-slate-100 shadow-sm transition-all duration-300 hover:shadow-md">
            
            <div class="relative aspect-[16/11] overflow-hidden">
              <a href="/listings/<%= listing._id %>">
                <img src="<%= listing.image?.url %>" class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
              </a>
              
              <div class="absolute top-3 left-3 glass-card rounded-lg px-2 py-1 flex items-center gap-1">
                <span class="material-symbols-outlined text-yellow-500 text-xs">star</span>
                <span class="text-[10px] font-black text-slate-900">4.9</span>
              </div>

              <button class="wishlist-btn absolute top-3 right-3 w-8 h-8 rounded-full bg-white/90 backdrop-blur-sm flex items-center justify-center shadow-lg transition-all active:scale-75" 
                      data-id="<%= listing._id %>">
                <span class="material-symbols-outlined text-red-500 text-lg fill-red-500">favorite</span>
              </button>

              <div class="absolute bottom-3 left-3">
                <span class="bg-white/90 px-2 py-0.5 rounded text-[8px] font-black tracking-widest uppercase">Verified</span>
              </div>
            </div>

            <div class="p-4 flex flex-col">
              <h3 class="mb-1 truncate"><%= listing.title %></h3>
              
              <div class="flex items-center gap-1 text-sub mb-4">
                <span class="material-symbols-outlined text-xs text-indigo-500">location_on</span>
                <%= listing.location %>, <%= listing.country %>
              </div>

              <div class="mt-auto pt-4 border-t border-slate-50 flex items-center justify-between">
                <div class="price-text" data-base-price="<%= listing.price %>" data-gst-price="<%= (listing.price * 1.18).toFixed(0) %>">
                  <div class="flex items-baseline gap-0.5">
                    <span class="text-slate-900">â‚¹<%= listing.price.toLocaleString("en-IN") %></span>
                    <span class="text-slate-400 font-bold text-[8px] uppercase">/night</span>
                  </div>
                  <span class="gst-badge text-[8px] font-black text-emerald-600 uppercase tracking-tighter" style="display: none">
                    Incl. GST
                  </span>
                </div>

                <a href="/listings/<%= listing._id %>" class="brand-gradient text-white px-4 py-2 rounded-lg text-[9px] font-black uppercase tracking-widest active:scale-95 transition-all">
                  View Property
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
</div>

<script src="/js/price-toggle.js"></script>

<script>
    // Premium Wishlist removal logic with synced animation
    document.querySelectorAll('.wishlist-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
            e.preventDefault();
            const listingId = btn.dataset.id;
            const card = btn.closest('.card-container');
            
            btn.style.opacity = '0.5';
            
            try {
                const response = await fetch(`/wishlist/${listingId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                if (response.ok) {
                    card.style.transition = 'all 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
                    card.style.opacity = '0';
                    card.style.transform = 'scale(0.9) translateY(10px)';
                    
                    setTimeout(() => {
                        card.remove();
                        if (document.querySelectorAll('.card-container').length === 0) {
                            location.reload(); 
                        }
                    }, 400);
                }
            } catch (err) {
                btn.style.opacity = '1';
                console.error('Failed to update wishlist');
            }
        });
    });
</script>