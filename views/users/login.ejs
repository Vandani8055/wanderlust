<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">Login on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>

      <div class="mb-3">
        <label for="email" class="form-lable">Email : </label><br />
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        
          pattern=".+@.+\.(com|org|net|edu|gov|mil|[a-z]{2,3})"
        />
        <div class="invalid-feedback">Please provide a valid email.</div>
        <div class="valid-feedback">Filled</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-lable">Password : </label><br />
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter your password.</div>
        <div class="valid-feedback">Filled</div>
      </div>
      <button class="btn btn-success rounded-pill disabled">Login</button>
    </form>
  </div>
</div>
