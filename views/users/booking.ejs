<% layout('layouts/boilerplate') %>
<%- include("../includes/flash") %>

<h2 class="mb-3">Book Listing: <%= listing.title %></h2>
<p>Price: â‚¹<%= listing.price %></p>

<form action="/bookings/<%= listing._id %>" method="POST" class="mt-3">
  <div class="mb-3">
    <label>Check-In:</label>
    <input class="form-control" type="date" name="checkIn" min="<%= new Date().toISOString().split('T')[0] %>" required>
  </div>

  <div class="mb-3">
    <label>Check-Out:</label>
    <input class="form-control" type="date" name="checkOut" min="<%= new Date().toISOString().split('T')[0] %>" required>
  </div>

  <button type="submit" class="btn btn-success mt-2">
    Pay with Stripe
  </button>
</form>


<style>
  /*
|---------------------------------------------------------
| PROFESSIONAL BOOKING FORM: GREEN ACCENT THEME
| Accent Theme: linear-gradient(90deg, #198754, #20c997)
|---------------------------------------------------------
*/

  /* Page section spacing & Title */
  h2.mb-3 {
    text-align: center;
    font-weight: 800;
    color: #1a202c;
    margin-top: 40px;
    font-size: 28px;
    font-family: 'Inter', sans-serif;
  }

  /* Price text */
  p {
    text-align: center;
    font-size: 1.25rem;
    font-weight: 600;
    color: #198754;
    /* Green accent color for the price */
    margin-bottom: 30px;
  }

  /* Main booking card */
  form.mt-3 {
    max-width: 550px;
    margin: 0 auto 60px;
    padding: 40px;
    background: #ffffff;
    border-radius: 16px;
    /* Soft, professional shadow */
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05), 0 0 0 1px rgba(0, 0, 0, 0.05);
    border: none;
    position: relative;
    overflow: hidden;
  }

  /* Soft top accent bar */
  form.mt-3::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 8px;
    /* Use the Green/Success Gradient */
    background: linear-gradient(90deg, #198754, #20c997);
    border-radius: 16px 16px 0 0;
  }

  /* Labels */
  form label {
    font-weight: 600;
    color: #4b5563;
    margin-bottom: 8px;
    font-size: 15px;
    display: block;
  }

  /* Inputs */
  form .form-control {
    border-radius: 10px;
    padding: 14px 16px;
    border: 1px solid #e2e8f0;
    transition: all 0.25s ease;
    background: #f8fafc;
    margin-bottom: 20px;
    font-size: 16px;
    color: #333;
  }

  form .form-control:focus {
    background: #fff;
    border-color: #198754;
    /* Primary green accent border on focus */
    /* Stronger shadow using primary green accent */
    box-shadow: 0 0 0 3px rgba(25, 135, 84, 0.2);
  }

  /* Button improved look */
  form .btn-success {
    width: 100%;
    height: auto;
    padding: 15px;
    margin-top: 25px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.1rem;
    color: #f8f9fa;
    /* Use the Green/Success Gradient for the button */
    background: linear-gradient(135deg, #198754, #20c997);
    border: none;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
  }

  /* Button hover */
  form .btn-success:hover {
    transform: translateY(-2px);
    /* Stronger hover shadow with primary green color */
    box-shadow: 0 15px 35px rgba(25, 135, 84, 0.45);
    background: linear-gradient(135deg, #157347, #1aa179);
    /* Slightly darker gradient on hover */
  }

  /* Smooth animation on load */
  form.mt-3 {
    animation: slideUp 0.6s ease;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Mobile optimization */
  @media (max-width: 576px) {
    form.mt-3 {
      padding: 30px 20px;
      margin-bottom: 30px;
      border-radius: 14px;
    }

    h2.mb-3 {
      font-size: 24px;
      margin-top: 20px;
    }
  }
</style>