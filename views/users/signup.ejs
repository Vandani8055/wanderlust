<% layout('/layouts/boilerplate') %>

<div class="fixed inset-0 z-[1000] bg-white flex flex-col lg:flex-row overflow-y-auto lg:overflow-hidden font-display">
  
  <div class="relative hidden lg:block lg:w-1/2 xl:w-[55%] h-full">
    <div class="absolute inset-0 bg-cover bg-center transition-transform duration-[3000ms] hover:scale-105" 
         style="background-image: url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?auto=format&fit=crop&q=80&w=2000');">
    </div>
    
    <div class="absolute inset-0 bg-black/10"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
    
    <div class="absolute top-8 left-8 flex items-center gap-2 text-white">
       <span class="material-symbols-outlined text-2xl font-bold">explore</span>
       <span class="text-lg font-black tracking-tighter uppercase">Wanderlust</span>
    </div>

    <div class="absolute bottom-12 left-10 right-10 text-white max-w-sm">
      <p class="text-2xl font-light leading-relaxed italic">"The mountains are calling, and I must go."</p>
      <p class="mt-3 text-[10px] font-bold tracking-[0.2em] uppercase opacity-80">John Muir — 2026 Collection</p>
    </div>
  </div>

  <div class="flex-1 flex flex-col justify-center items-center px-4 py-10 sm:px-12 md:px-20 bg-white">
    
    <div class="lg:hidden flex items-center gap-2 mb-8 self-start">
      <span class="material-symbols-outlined text-[#1a545b] text-3xl font-bold">explore</span>
      <span class="text-xl font-black text-slate-900 tracking-tighter">Wanderlust</span>
    </div>

    <div class="w-full max-w-[400px]">
      <div class="mb-8">
        <h1 class="text-deep-charcoal text-xl font-black tracking-tight mb-2">Create Account</h1>
        <p class="text-slate-500 text-sm leading-relaxed">Start your journey with us today.</p>
      </div>

      <form action="/signup" method="POST" class="space-y-6 needs-validation" novalidate>
        
        <div class="flex flex-col gap-1">
          <label for="username" class="text-slate-700 text-[10px] font-bold uppercase tracking-[0.15em]">Username</label>
          <input 
            placeholder="wanderer_123" 
            name="username" 
            id="username" 
            type="text" 
            class="w-full rounded-xl border-slate-200 bg-slate-50 text-deep-charcoal focus:ring-2 focus:ring-electric-blue focus:border-electric-blue h-12 px-4 text-sm transition-all" 
            required 
          />
        </div>

        <div class="flex flex-col gap-1">
          <label for="email" class="text-slate-700 text-[10px] font-bold uppercase tracking-[0.15em]">Email Address</label>
          <input 
            placeholder="traveler@wanderlust.com" 
            name="email" 
            id="email" 
            type="email" 
            class="w-full rounded-xl border-slate-200 bg-slate-50 text-deep-charcoal focus:ring-2 focus:ring-electric-blue focus:border-electric-blue h-12 px-4 text-sm transition-all" 
            required 
          />
        </div>

        <div class="flex flex-col gap-1">
          <div class="flex justify-between items-center">
            <label for="password" class="text-slate-700 text-[10px] font-bold uppercase tracking-[0.15em]">Password</label>
            <label for="confirmPassword" class="text-slate-700 text-[10px] font-bold uppercase tracking-[0.15em]">Confirm</label>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <input 
              placeholder="••••••••" 
              type="password" 
              id="password" 
              name="password" 
              class="w-full rounded-xl border-slate-200 bg-slate-50 text-deep-charcoal focus:ring-2 focus:ring-electric-blue focus:border-electric-blue h-12 px-4 text-sm transition-all" 
              minlength="8" 
              required 
            />
            <input 
              placeholder="••••••••" 
              type="password" 
              id="confirmPassword" 
              class="w-full rounded-xl border-slate-200 bg-slate-50 text-deep-charcoal focus:ring-2 focus:ring-electric-blue focus:border-electric-blue h-12 px-4 text-sm transition-all" 
              required 
              oninput="if(this.value != document.getElementById('password').value) this.setCustomValidity('No match'); else this.setCustomValidity('');"
            />
          </div>
        </div>

        <button type="submit" class="btn-gradient w-full h-12 rounded-xl text-white font-bold text-sm tracking-wide shadow-lg shadow-electric-blue/20 hover:shadow-xl hover:brightness-110 transition-all flex items-center justify-center gap-2">
          <span>Create Account</span>
          <span class="material-symbols-outlined text-sm">arrow_forward</span>
        </button>
      </form>

      <div class="relative my-10">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-100"></div>
        </div>
        <div class="relative flex justify-center text-[10px] font-black uppercase tracking-widest">
          <span class="px-4 bg-white text-slate-400">Or continue with</span>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-3">
        <button class="flex items-center justify-center gap-2 h-12 rounded-xl border border-slate-200 bg-white hover:bg-slate-50 transition-all font-semibold text-xs text-slate-700">
          <img alt="Google" class="size-4" src="https://www.gstatic.com/images/branding/product/1x/gsa_512dp.png"/>
          Google
        </button>
        <button class="flex items-center justify-center gap-2 h-12 rounded-xl border border-slate-200 bg-white hover:bg-slate-50 transition-all font-semibold text-xs text-slate-700">
          <i class="fa-brands fa-apple text-sm text-black"></i>
          Apple
        </button>
      </div>

      <p class="mt-10 text-center text-slate-500 text-xs">
        Already have an account? 
        <a class="text-electric-blue font-bold hover:underline" href="/login">Log In</a>
      </p>
    </div>
  </div>
</div>