<% layout('/layouts/boilerplate') %>

<style>
  .text-display { font-family: system-ui, -apple-system, sans-serif; }
  h1 { font-size: 1.25rem; } /* Reduced from 1.5 */
  .text-base { font-size: 0.75rem; }
  .text-sm { font-size: 0.7rem; }
  .text-xs { font-size: 0.65rem; }
  
  .text-slate-900 { color: #0f172a; }
  .text-slate-500 { color: #64748b; }
  .text-slate-400 { color: #94a3b8; }
</style>

<div class="fixed inset-0 z-[1000] bg-white flex flex-col lg:flex-row overflow-y-auto font-display">
  
  <div class="relative hidden lg:block lg:w-1/2 xl:w-[50%] h-full">
    <div class="absolute inset-0 bg-cover bg-center" 
         style="background-image: url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?auto=format&fit=crop&q=80&w=2000');">
    </div>
    <div class="absolute inset-0 bg-black/10"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
    
    <div class="absolute top-6 left-8 flex items-center gap-2 text-white">
       <img src="/images/logo.png" alt="Wanderlust Logo" class="size-12 object-contain" />
       <span class="text-base font-white tracking-tighter">Wanderlust</span>
    </div>

    <div class="absolute bottom-8 left-10 right-10 text-white max-w-sm">
      <p class="text-xl font-light leading-relaxed italic">"The mountains are calling, and I must go."</p>
      <p class="mt-2 text-[9px] font-bold tracking-[0.2em] uppercase opacity-80">John Muir — 2026 Collection</p>
    </div>
  </div>

  <div class="flex-1 flex flex-col justify-start lg:justify-center items-center px-4 py-6 sm:px-12 bg-white">
    
    <div class="w-full max-w-[360px]">
      <div class="mb-4 flex items-center gap-2">
        <img src="/images/logo.png" alt="Wanderlust Logo" class="size-12 object-contain" />
        <h1 class="text-slate-900 font-black tracking-tight">Create Account</h1>
      </div>
      <p class="text-slate-500 text-xs mb-6">Start your journey with us today.</p>

      <form action="/signup" method="POST" class="space-y-4 needs-validation" novalidate>
        <div class="flex flex-col gap-1">
          <label for="username" class="text-slate-700 text-[9px] font-bold uppercase tracking-[0.1em]">Username</label>
          <input 
            placeholder="wanderer_123" 
            name="username" 
            id="username" 
            type="text" 
            class="w-full rounded-lg border-slate-200 bg-slate-50 text-slate-900 h-10 px-3 text-xs focus:ring-2 focus:ring-indigo-600 outline-none" 
            required 
          />
        </div>

        <div class="flex flex-col gap-1">
          <label for="email" class="text-slate-700 text-[9px] font-bold uppercase tracking-[0.1em]">Email Address</label>
          <input 
            placeholder="traveler@wanderlust.com" 
            name="email" 
            id="email" 
            type="email" 
            class="w-full rounded-lg border-slate-200 bg-slate-50 text-slate-900 h-10 px-3 text-xs focus:ring-2 focus:ring-indigo-600 outline-none" 
            required 
          />
        </div>

        <div class="flex flex-col gap-1">
          <div class="flex justify-between items-center">
            <label for="password" class="text-slate-700 text-[9px] font-bold uppercase tracking-[0.1em]">Password</label>
            <label for="confirmPassword" class="text-slate-700 text-[9px] font-bold uppercase tracking-[0.1em]">Confirm</label>
          </div>
          <div class="grid grid-cols-2 gap-2">
            <input 
              placeholder="••••••" 
              type="password" 
              id="password" 
              name="password" 
              class="w-full rounded-lg border-slate-200 bg-slate-50 h-10 px-3 text-xs focus:ring-2 focus:ring-indigo-600 outline-none" 
              required 
            />
            <input 
              placeholder="••••••" 
              type="password" 
              id="confirmPassword" 
              name="confirmPassword" 
              class="w-full rounded-lg border-slate-200 bg-slate-50 h-10 px-3 text-xs focus:ring-2 focus:ring-indigo-600 outline-none" 
              required 
            />
          </div>
        </div>

        <button type="submit" class="w-full h-11 rounded-lg text-white font-bold text-xs tracking-wide shadow-md hover:brightness-110 transition-all flex items-center justify-center gap-2" style="background: linear-gradient(135deg, #00B0FF 0%, #673ab6 100%);">
          <span>Create Account</span>
          <span class="material-symbols-outlined text-sm">arrow_forward</span>
        </button>
      </form>

      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-100"></div>
        </div>
        <div class="relative flex justify-center text-[9px] font-black uppercase tracking-widest">
          <span class="px-3 bg-white text-slate-400">Or continue with</span>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-3">
        <button class="flex items-center justify-center gap-2 h-10 rounded-lg border border-slate-200 bg-white hover:bg-slate-50 text-[10px] font-semibold text-slate-700">
          <img alt="Google" class="size-3" src="https://www.gstatic.com/images/branding/product/1x/gsa_512dp.png"/>
          Google
        </button>
        <button class="flex items-center justify-center gap-2 h-10 rounded-lg border border-slate-200 bg-white hover:bg-slate-50 text-[10px] font-semibold text-slate-700">
          <i class="fa-brands fa-apple text-xs text-black"></i>
          Apple
        </button>
      </div>

      <p class="mt-6 text-center text-slate-500 text-[10px]">
        Already have an account? 
        <a class="text-indigo-600 font-bold hover:underline" href="/login">Log In</a>
      </p>
    </div>
  </div>
</div>