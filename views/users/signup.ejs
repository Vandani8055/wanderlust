<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-lable">Username : </label><br />
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">looks good!</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-lable">Email : </label><br />
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-lable">Password : </label><br />
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
