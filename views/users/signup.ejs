<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-lable">Username : </label><br />
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter username</div>
        <div class="valid-feedback">Filled</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-lable">Email : </label><br />
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
          **pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?"
          **
        />
        <div class="invalid-feedback">Please provide a valid email.</div>
        <div class="valid-feedback">Filled</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-lable">Password : </label><br />
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter your password.</div>
        <div class="valid-feedback">Filled</div>
      </div>
      <button class="btn btn-success rounded-pill disabled">Submit</button>
    </form>
  </div>
</div>

<!--do not use [a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$ this bcz no more strict -->
