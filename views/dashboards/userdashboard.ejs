<% layout('/layouts/boilerplate') %>

<div class="host-wrapper mt-3">
  <div class="host-card">

    <div class="host-top-area-v3">

      <div class="host-profile-card">
        <div class="profile-avatar">
          <img src="<%= currUser.profileImage ? currUser.profileImage : '/images/default.jpg' %>" class="nav-profile-img" />
        </div>

        <div class="profile-info">
          <h2>Hello, <%= user?.username || "User" %></h2>
          <a href="/edit" class="profile-link rounded-pill"> Edit Profile</a>
        </div>
      </div>

      <div class="host-header-v3">
        <div class="header-text-v3">
          <h1>User Dashboard</h1>
          <span>Manage your listings, bookings & earnings effortlessly.</span>
        </div>

        <a href="/listings/new" class="host-btn-v2 primary-action">
          <i class="fas fa-plus-circle"></i> Add New Listing
        </a>
      </div>

    </div>

    <!-- ===== STATS SECTION ===== -->
    <div class="host-stats-v2">
      <div class="stat-box-v2 stat-1">
        <p class="stat-label">Total Listings</p>
        <strong><%= totalListings %></strong>
        <i class="fas fa-city stat-icon"></i>
      </div>

      <div class="stat-box-v2 stat-2">
        <p class="stat-label">Total Bookings</p>
        <strong><%= totalBookings %></strong>
        <i class="fas fa-calendar-alt stat-icon"></i>
      </div>

      <div class="stat-box-v2 stat-3">
        <p class="stat-label">Guest Reviews</p>
        <strong><%= totalReviews %></strong>
        <i class="fas fa-star stat-icon"></i>
      </div>
    </div>

    <!-- ===== TABS ===== -->
    <div class="host-tabs-v2">
      <button class="tab-btn-v2 active" data-tab="listings">My Listings</button>
      <button class="tab-btn-v2" data-tab="bookings">Bookings</button>
      <button class="tab-btn-v2" data-tab="reviews">Guest Reviews</button>
    </div>

    <div class="host-content-v2">

      <!-- LISTINGS TAB -->
      <div class="tab-section active" id="listings">
        <% if(listings.length === 0) { %>
        <p class="empty-msg-v2">No listings added yet. Let's get started!</p>
        <% } else { %>

        <% listings.forEach(listing => { %>
        <div class="dash-card-v2 listing-card">

          <div class="card-left">
            <h3><%= listing.title %></h3>
            <p class="location-text"><i class="fas fa-map-marker-alt"></i> <%= listing.location %></p>
          </div>

          <div class="btns">
            <a class="view-btn rounded-pill" href="/listings/<%= listing._id %>">View</a>
            <a href="/listings/<%= listing._id %>/edit" class="edit-btn rounded-pill">Edit</a>

            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button class="delete-btn rounded-pill">Delete</button>
            </form>
          </div>

        </div>
        <% }) %>

        <% } %>
      </div>

      <!-- BOOKINGS TAB -->
<div class="tab-section" id="bookings">
  <% if (bookings.length > 0) { %>
  <% bookings.forEach(booking => { %>
  <div class="booking-card">
    <p>Booking for: <%= booking.listing ? booking.listing.title : "N/A" %></p>
    <p>Guest: <%= booking.user?.username || "User" %></p>

    <p>Check-In: <%= booking.checkIn.toDateString() %></p>
    <p>Check-Out: <%= booking.checkOut.toDateString() %></p>
  </div>
  <% }) %>
  <% } else { %>
  <p>No bookings yet.</p>
  <% } %>
</div>


      <!-- REVIEWS TAB -->
      <div class="tab-section" id="reviews">
        <h2 class="section-title">Guest Reviews</h2>

        <% if (reviews.length === 0) { %>
        <div class="empty-msg-v2">No guest reviews yet ðŸš«</div>
        <% } else { %>

        <div class="review-small-grid">
          <% reviews.forEach(r => { %>

          <div class="review-small-card">

            <!-- Avatar + Username -->
            <div class="review-small-header">
              <img src="<%= r.author?.profileImage || '/images/default.jpg' %>" class="review-small-avatar" />
              <span class="review-small-username"><%= r.author?.username || "User" %></span>
            </div>

            <!-- Rating -->
            <div class="review-small-stars">
              <% for (let i = 1; i <= 5; i++) { %>
              <i class="star <%= i <= r.rating ? 'filled' : '' %>">â˜…</i>
              <% } %>
            </div>

            <% if (r.listing) { %>
            <a class="view-btn rounded-pill" href="/listings/<%= r.listing._id %>">View</a>
            <% } %>


          </div>

          <% }) %>
        </div>

        <% } %>
      </div>

    </div>
  </div>
