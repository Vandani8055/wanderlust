    height: 90px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #ff385c;
    box-shadow: 0 0 0 5px rgba(255,56,92,0.1);
}

.photo-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

#profileImage {
    margin-top: 10px;
}

/* BUTTON */
.form-actions {
    display: flex;
    justify-content: flex-end;
