<% layout('/layouts/boilerplate') %>


<style type="text/tailwindcss">
    @layer utilities {
        .premium-shadow { box-shadow: 0 20px 50px -12px rgba(51, 119, 255, 0.1); }
        .gradient-btn { background: linear-gradient(135deg, #3377ff 0%, #8B5CF6 100%); }
    }
</style>

<div class="bg-slate-50 min-h-screen font-display pb-20">
    <div class="h-10"></div>

    <main class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="mb-10 text-center md:text-left">
            <h2 class="text-3xl md:text-4xl font-black text-royal-purple tracking-tight mb-2">Admin Settings</h2>
            <p class="text-slate-500 text-base md:text-lg">Update admin account information</p>
        </div>

        <div class="bg-white rounded-2xl premium-shadow border border-slate-200/60 overflow-hidden">
            
            <form action="/admin/edit?_method=PUT" method="POST" enctype="multipart/form-data">
                
                <div class="p-8 border-b border-slate-100 flex flex-col items-center bg-slate-50/30">
                    <div class="relative group">
                        <div class="w-28 h-28 md:w-32 md:h-32 rounded-full border-4 border-white shadow-xl overflow-hidden bg-slate-100">
                            <img id="preview" src="<%= currUser.profileImage ? currUser.profileImage : '/images/default.jpg' %>" 
                                 class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                        </div>
                        <label for="profileImage" class="absolute bottom-0 right-0 size-10 bg-primary text-white rounded-full flex items-center justify-center shadow-lg hover:bg-primary/90 transition-all cursor-pointer">
                            <span class="material-symbols-outlined text-xl">photo_camera</span>
                        </label>
                        <input type="file" name="profileImage" id="profileImage" accept="image/*" class="hidden" onchange="previewImage(event)">
                    </div>
                    
                    <div class="mt-6 text-center">
                        <h3 class="text-xl font-bold text-royal-purple"><%= admin.username %></h3>
                        <div class="flex items-center gap-1.5 justify-center mt-1 text-accent-purple font-bold text-[10px] uppercase tracking-widest">
                            <span class="material-symbols-outlined text-sm">verified_user</span>
                            System Administrator
                        </div>
                    </div>

                    <div class="mt-6 flex gap-3">
                        <label for="profileImage" class="px-5 py-2.5 bg-primary/10 text-primary font-bold text-xs rounded-xl hover:bg-primary/20 transition-all cursor-pointer">
                            Change Photo
                        </label>
                    </div>
                </div>

                <div class="p-6 md:p-12 space-y-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
                        
                        <div class="space-y-2">
                            <label class="block text-sm font-bold text-royal-purple ml-1">Admin Name</label>
                            <div class="relative group">
                                <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors">person</span>
                                <input class="w-full h-14 pl-12 pr-4 bg-slate-50 border border-slate-200 rounded-xl focus:ring-4 focus:ring-primary/10 focus:border-primary outline-none transition-all text-slate-900 font-semibold" 
                                       type="text" name="username" value="<%= admin.username %>" required />
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label class="block text-sm font-bold text-royal-purple ml-1">Email Address</label>
                            <div class="relative group">
                                <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-400">mail</span>
                                <input class="w-full h-14 pl-12 pr-12 bg-slate-100 border-slate-200 rounded-xl cursor-not-allowed text-slate-500 font-medium" 
                                       readonly type="email" value="<%= admin.email %>" />
                                <span class="material-symbols-outlined absolute right-4 top-1/2 -translate-y-1/2 text-slate-300 text-lg">lock</span>
                            </div>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="block text-sm font-bold text-royal-purple ml-1">Account Role</label>
                        <div class="relative group">
                            <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-400">shield_person</span>
                            <input class="w-full h-14 pl-12 pr-12 bg-slate-100 border-slate-200 rounded-xl cursor-not-allowed text-slate-500 font-medium" 
                                   readonly type="text" value="Administrator" />
                            <span class="material-symbols-outlined absolute right-4 top-1/2 -translate-y-1/2 text-slate-300 text-lg">lock</span>
                        </div>
                        <p class="text-[11px] text-slate-400 ml-1 font-medium">Administrative roles are locked to the system core.</p>
                    </div>

                    <div class="space-y-2">
                        <label class="block text-sm font-bold text-royal-purple ml-1">Admin Bio</label>
                        <textarea name="bio" rows="4" 
                                  class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl focus:ring-4 focus:ring-primary/10 focus:border-primary outline-none transition-all text-slate-900 font-medium resize-none" 
                                  placeholder="Describe your role or add a bio..."><%= admin.bio || "" %></textarea>
                    </div>

                    <div class="pt-4 space-y-4">
                        <h4 class="text-xs font-black text-royal-purple uppercase tracking-widest border-b border-slate-100 pb-2">Security & Identity</h4>
                        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between p-4 bg-emerald-50/50 border border-emerald-100 rounded-2xl gap-4">
                            <div class="flex items-center gap-3">
                                <div class="size-10 rounded-xl bg-emerald-100 flex items-center justify-center text-emerald-600">
                                    <span class="material-symbols-outlined">verified</span>
                                </div>
                                <div>
                                    <p class="text-sm font-bold text-slate-900">Verified Administrator</p>
                                    <p class="text-xs text-slate-500">Your account is fully audited and secure.</p>
                                </div>
                            </div>
                            <span class="px-3 py-1 bg-emerald-500 text-white text-[10px] font-black rounded-full uppercase">Active</span>
                        </div>
                    </div>
                </div>

                <div class="p-6 md:p-8 bg-slate-50 border-t border-slate-100 flex flex-col md:flex-row justify-between items-center gap-4">
                    <p class="text-xs text-slate-400 text-center md:text-left font-medium">Last session update: <%= new Date().toLocaleDateString() %></p>
                    <div class="flex gap-3 w-full md:w-auto">
                        <a href="/admin" class="flex-1 md:flex-none text-center px-8 py-3 bg-white border border-slate-200 text-slate-600 font-bold rounded-xl hover:bg-slate-100 transition-all text-sm">
                            Cancel
                        </a>
                        <button type="submit" class="flex-1 md:flex-none px-10 py-3 gradient-btn text-white font-bold rounded-xl hover:shadow-lg hover:shadow-primary/30 transition-all text-sm">
                            Save Changes
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="mt-8 text-center text-slate-400 text-xs font-medium">
            © 2026 Wanderlust Travel Inc. • Secure Admin Console
        </div>
    </main>
</div>

<script>
    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function() {
            const output = document.getElementById('preview');
            output.src = reader.result;
        }
        reader.readAsDataURL(event.target.files[0]);
    }
</script>