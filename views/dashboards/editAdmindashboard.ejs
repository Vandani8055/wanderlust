    padding: 14px 40px;
    border-radius: 6px;
    border: none;
    color: #fff;
    font-weight: 700;
    cursor: pointer;
    transition: .3s;
}

.btn-save:hover {
    transform: translateY(-1px);
    box-shadow: 0 8px 20px rgba(255,56,92,0.4);
}

/* RESPONSIVE */
@media (max-width: 600px) {

    .edit-header, 
    .edit-form {
        padding: 20px;
    }

    .photo-upload {
        flex-direction: column;
        align-items: flex-start;
    }

    .photo-preview {
        width: 75px;
        height: 75px;
    }

    .form-actions {
        justify-content: center;
    }
}
