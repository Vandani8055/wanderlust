<% layout('/layouts/boilerplate') %>

<div class="profile-wrapper">
  <div class="profile-card edit-profile-card">

    <!-- Accent top bar -->
    <div class="edit-top-bar"></div>

    <!-- Header -->
    <div class="edit-header">
      <h1>Admin Profile</h1>
      <span>Update admin account information</span>
    </div>

    <!-- EDIT FORM -->
    <form action="/admin/edit?_method=PUT" method="POST" enctype="multipart/form-data" class="edit-form">

      <!-- Photo Upload -->
      <div class="form-group photo-upload">
        <label>Profile Photo</label>

        <div class="photo-preview">
          <img src="<%= currUser.profileImage ? currUser.profileImage : '/images/default.jpg' %>" class="nav-profile-img" />
        </div>

        <input type="file" name="profileImage" id="profileImage" accept="image/*">
      </div>

      <!-- Username -->
      <div class="form-group">
        <label>Admin Name</label>
        <input
          type="text"
          name="username"
          value="<%= admin.username %>"
          required
        />
      </div>

      <!-- Email (readonly) -->
      <div class="form-group">
        <label>Email</label>
        <input
          type="email"
          value="<%= admin.email %>"
          readonly
        />
      </div>

      <!-- Admin Role (readonly) -->
      <div class="form-group">
        <label>Role</label>
        <input
          type="text"
          value="Administrator"
          readonly
        />
      </div>

      <!-- Bio -->
      <div class="form-group">
        <label>Bio</label>
        <textarea name="bio" rows="4"><%= admin.bio || "" %></textarea>
      </div>

      <!-- Save -->
      <div class="form-actions">
        <button type="submit" class="btn-save rounded-pill">Save Changes</button>
      </div>

    </form>
  </div>
</div>


