<% layout('/layouts/boilerplate') %>

<style>
  .font-manrope { font-family: 'Manrope', sans-serif; }
  
  .material-symbols-outlined { 
    font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24; 
  }

  /* Brand Gradient Synchronization */
  .brand-gradient { 
    background: linear-gradient(135deg, #00B0FF 0%, #673ab6 100%) !important; 
  }

  /* Consistent Font Sizing from Create Page */
  h1 { font-size: 1.5rem !important; font-weight: 900 !important; letter-spacing: -0.025em; }
  h2 { font-size: 1rem !important; font-weight: 700 !important; }
  .text-label { font-size: 0.75rem; font-weight: 700; color: #1e293b; text-transform: uppercase; letter-spacing: 0.05em; }
  
  /* Profile Specific */
  #profileImageInput { display: none; }
  .profile-preview-container {
    width: 120px; height: 120px;
    border-radius: 2rem; /* Using the same rounded style as create listing cards */
    border: 2px solid #f8fafc;
    overflow: hidden;
    box-shadow: 0 10px 15px -3px rgba(0,0,0,0.04);
  }
</style>

<div class="bg-white font-manrope text-slate-900 antialiased min-h-screen pb-20">
  <main class="max-w-4xl mx-auto px-4 md:px-12 py-6">
    
    <nav class="flex items-center gap-1 mb-6 text-[10px] font-bold uppercase tracking-wider text-gray-400">
      <a class="hover:text-indigo-600" href="/dashboard">Dashboard</a>
      <span class="material-symbols-outlined text-[10px]">chevron_right</span>
      <span class="text-slate-900">Profile Settings</span>
    </nav>

    <div class="mb-8">
      <h1 class="font-black tracking-tight text-slate-900 mb-2">Profile Settings</h1>
      <p class="text-slate-500 text-[10px] font-bold uppercase tracking-widest">Customize your premium host identity</p>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 md:p-8">
      <form action="/host/edit?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-8">
        
        <div class="flex flex-col items-center justify-center py-6 border-b border-slate-50">
          <div class="relative group">
            <div class="profile-preview-container bg-slate-50 flex items-center justify-center">
                <img id="imagePreview" 
                     src="<%= currUser.profileImage ? currUser.profileImage : '/images/default.jpg' %>" 
                     class="w-full h-full object-cover transition-transform group-hover:scale-105" 
                     alt="Profile Preview" />
            </div>
            <label for="profileImageInput" class="absolute -bottom-2 -right-2 size-10 brand-gradient text-white rounded-xl flex items-center justify-center shadow-lg cursor-pointer hover:scale-110 transition-all border-4 border-white">
              <span class="material-symbols-outlined text-sm">photo_camera</span>
            </label>
            <input type="file" name="profileImage" id="profileImageInput" accept="image/*" onchange="previewImage(event)">
          </div>
          <div class="mt-4 text-center">
            <h2 class="font-black text-slate-900"><%= currUser.username %></h2>
            <span class="flex items-center gap-1 text-emerald-500 text-[9px] font-black uppercase tracking-widest mt-1">
               <span class="material-symbols-outlined !text-xs">verified</span> Verified Host
            </span>
          </div>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-2 border-b border-slate-50 pb-3">
            <span class="material-symbols-outlined text-indigo-600 text-base">person</span>
            <h2 class="font-bold text-slate-900">Personal Information</h2>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <label class="block">
              <span class="text-label mb-1.5 block">Username</span>
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 font-bold text-xs">@</span>
                <input name="username" type="text" 
                       class="w-full rounded-lg border-slate-200 bg-slate-50 py-3 pl-8 pr-4 text-xs font-bold focus:ring-1 focus:ring-indigo-500 outline-none" 
                       value="<%= currUser.username %>" required />
              </div>
            </label>

            <label class="block opacity-60">
              <span class="text-label mb-1.5 block">Email Address</span>
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                  <span class="material-symbols-outlined text-sm">mail</span>
                </span>
                <input type="email" value="<%= currUser.email %>" readonly 
                       class="w-full rounded-lg border-slate-200 bg-slate-100 py-3 pl-9 pr-4 text-xs font-bold cursor-not-allowed" />
                <span class="absolute right-3 top-1/2 -translate-y-1/2 material-symbols-outlined text-xs text-slate-400">lock</span>
              </div>
            </label>
          </div>

          <label class="block">
            <span class="text-label mb-1.5 block">Personal Bio</span>
            <textarea name="bio" rows="4" 
                      class="w-full rounded-lg border-slate-200 bg-slate-50 text-xs py-3 px-4 resize-none focus:ring-1 focus:ring-indigo-500 outline-none font-medium" 
                      placeholder="Tell guests about your hosting style..." 
                      required><%= currUser.bio || '' %></textarea>
          </label>
        </div>

        <div class="pt-6 border-t border-slate-100 flex items-center justify-between">
          <a href="/dashboard" class="text-slate-400 font-bold text-[10px] uppercase tracking-widest hover:text-red-500 flex items-center gap-1">
            <span class="material-symbols-outlined text-sm">west</span> Cancel
          </a>
          <button type="submit" class="brand-gradient text-white px-8 py-2 rounded-lg text-[10px] font-bold shadow-sm hover:scale-[1.02] active:scale-[0.98] transition-all flex items-center gap-2 uppercase tracking-wider">
             Update Profile <span class="material-symbols-outlined text-xs">check_circle</span>
          </button>
        </div>
      </form>
    </div>

    <div class="mt-12 p-6 border-2 border-dashed border-red-50 rounded-2xl bg-red-50/20 flex flex-col md:flex-row items-center justify-between gap-4">
      <div>
        <h2 class="text-red-600 !text-xs font-black uppercase tracking-widest mb-1">Deactivate Account</h2>
        <p class="text-[10px] text-slate-400 font-bold uppercase tracking-tight">Permanently remove your host data and all listings.</p>
      </div>
      <button class="text-[9px] font-black text-red-400 hover:text-red-600 uppercase tracking-widest px-4 py-2 border border-red-100 rounded-lg hover:bg-white transition-all">
        Delete Account
      </button>
    </div>

    <div class="mt-12 flex justify-center gap-6">
      <div class="flex items-center gap-1.5 text-slate-300">
        <span class="material-symbols-outlined text-sm">shield_person</span>
        <span class="text-[9px] font-black uppercase tracking-tighter">Security Encryption</span>
      </div>
      <div class="flex items-center gap-1.5 text-slate-300">
        <span class="material-symbols-outlined text-sm">lock_reset</span>
        <span class="text-[9px] font-black uppercase tracking-tighter">Privacy Protected</span>
      </div>
    </div>
  </main>
</div>

<script>
  // Live preview for image selection
  function previewImage(event) {
    const reader = new FileReader();
    reader.onload = function() {
      const output = document.getElementById('imagePreview');
      output.src = reader.result;
    };
    reader.readAsDataURL(event.target.files[0]);
  }
</script>