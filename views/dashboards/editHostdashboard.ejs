<% layout('/layouts/boilerplate') %>

<div class="profile-wrapper">
  <div class="profile-card edit-profile-card">

    <div class="edit-top-bar"></div>

    <div class="edit-header">
      <h1>Edit Host Profile</h1>
      <span>Manage your hosting information</span>
    </div>

    <!-- HOST EDIT FORM -->
    <form action="/host/edit?_method=PUT" method="POST" enctype="multipart/form-data" class="edit-form">

      <!-- Profile Photo -->
      <div class="form-group photo-upload">
        <label>Profile Photo</label>
        <div class="photo-preview">
          <img src="<%= currUser.profileImage ? currUser.profileImage : '/images/default.jpg' %>" class="nav-profile-img" />
        </div>
        <input type="file" name="profileImage" id="profileImage" accept="image/*">
      </div>

      <!-- Username -->
      <div class="form-group">
        <label>Username</label>
        <input 
          type="text" 
          name="username"
          value="<%= host.username %>"
        />
      </div>

      <!-- Email (readonly) -->
      <div class="form-group">
        <label>Email</label>
        <input 
          type="email" 
          value="<%= host.email %>"
          readonly
        />
      </div>

      <!-- Bio -->
      <div class="form-group">
        <label>Bio</label>
        <textarea name="bio" rows="4"><%= host.bio || "" %></textarea>
      </div>

      <!-- Save -->
      <div class="form-actions">
        <button type="submit" class="btn-save rounded-pill">Save Changes</button>
      </div>

    </form>
  </div>
</div>

